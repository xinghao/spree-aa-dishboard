<%= form_tag(@search_url, :method => "get")  do  %>
    <%= label_tag nil, t(:date_range) %><br />
    <div class="date-range-filter">
      <div class="left sub-field">
        <%= text_field_tag :start, nil, :class => 'datepicker', :value => @start_from.strftime("%Y/%m/%d") %><br />
        <%= label_tag nil, t(:start), :class => 'sub' %>
      </div>
      <div class="right sub-field">
        <%= text_field_tag :end, nil, :class => 'datepicker', :value => @end_to.strftime("%Y/%m/%d") %><br />
        <%= label_tag nil, t(:stop) %>
      </div>
    </div>

    <p><%= button "Submit" %></p>
<% end %>


